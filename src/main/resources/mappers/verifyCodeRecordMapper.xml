<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.dao.VerifyCodeRecordMapper">
    <sql id="baseColumn">
        id,
        type,
        phone,
        code,
        count,
        create_time
    </sql>

    <sql id="saveColumn">
          create_time,
          update_time,
          count,
          phone,
          code,
          type,
          expire_time
    </sql>

    <resultMap id="baseResultMap" type="com.mall.pojo.VerifyCodeRecord">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="type" column="username" jdbcType="INTEGER"/>
        <result property="phone" column="email" jdbcType="VARCHAR"/>
        <result property="code" column="email" jdbcType="VARCHAR"/>
        <result property="count" column="email" jdbcType="INTEGER"/>
    </resultMap>

    <select id="selectTodayLastRecord" resultMap="baseResultMap">
        select <include refid="baseColumn"/>
        from mall_verify_code_record
        where type = #{type} and create_time >= #{time}
    </select>

    <insert id="save" keyColumn="id">
        insert into mall_verify_code_record (
          create_time,
          update_time,
          count,
          phone,
          code,
          type,
          expire_time
         )values(
          #{create_time},
          #{update_time},
          #{count},
          #{phone},
          #{code},
          #{type},
          #{expire_time}
         )
    </insert>
</mapper>